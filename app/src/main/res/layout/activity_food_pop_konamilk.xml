<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.co.nichiwa_system.okadayosuke.myapplication.food_pop_konamilk">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:src="@drawable/konamilk"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/input_konamilk"
        android:layout_above="@+id/date_konamilk"
        android:layout_toStartOf="@+id/textView136" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缶"
        android:id="@+id/textView136"
        android:layout_alignBottom="@+id/imageView17"
        android:layout_toStartOf="@+id/imageView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消費期限はXXXX年XX月XX日です"
        android:id="@+id/date_konamilk"
        android:layout_below="@+id/imageView17"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_konamilk"
        android:src="@drawable/icon_calendar"
        android:layout_below="@+id/imageView17"
        android:layout_toEndOf="@+id/date_konamilk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼児"
        android:id="@+id/textView137"
        android:layout_alignTop="@+id/textView136"
        android:layout_toStartOf="@+id/konamilk_baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView138"
        android:layout_alignTop="@+id/textView137"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/konamilk_baby"
        android:layout_alignTop="@+id/textView138"
        android:layout_toStartOf="@+id/textView138" />

</RelativeLayout>
