<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.co.nichiwa_system.okadayosuke.myapplication.food_pop_rinyu">

    <EditText
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="2"
        android:id="@+id/input_rinyu"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_toStartOf="@+id/textView135" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消費期限はXXXX年XX月XX日です"
        android:id="@+id/date_rinyu"
        android:layout_below="@+id/textView135"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食"
        android:id="@+id/textView135"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_toStartOf="@+id/imageView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼児"
        android:id="@+id/textView143"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_toStartOf="@+id/rinyu_baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        android:id="@+id/textView146"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:id="@+id/rinyu_baby"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_toStartOf="@+id/textView146" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_rinyu"
        android:src="@drawable/icon_calendar"
        android:layout_below="@+id/imageView18"
        android:layout_toEndOf="@+id/date_rinyu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView18"
        android:src="@drawable/rinyu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
