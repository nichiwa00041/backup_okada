<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.co.nichiwa_system.okadayosuke.myapplication.setting_pop_limit">

    <TextView android:text="期日を選択してください" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limit_tutorial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14日"
        android:id="@+id/limit_14days"
        android:layout_below="@+id/limit_tutorial"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30日"
        android:id="@+id/limit_30days"
        android:layout_alignTop="@+id/limit_14days"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60日"
        android:id="@+id/limit_60days"
        android:layout_alignTop="@+id/limit_30days"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
